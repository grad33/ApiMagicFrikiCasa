<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="#B3B3B3"
    android:layout_marginTop="5sp"

    >

    <TextView
        android:id="@+id/card_text"
        android:layout_width="198dp"
        android:layout_height="128dp"
        android:layout_alignTop="@+id/card_img"

        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/card_img"
        android:text="TextView"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toBottomOf="@+id/card_rare" />


    <TextView
        android:id="@+id/card_rare"
        style="@style/rare"
        android:layout_width="198dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/card_img"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/card_img"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toBottomOf="@+id/card_name" />

    <ImageView
        android:id="@+id/card_img"
        android:layout_width="175dp"
        android:layout_height="253dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/amogus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="198dp"
        android:layout_height="40dp"
        style="@style/nombre"
        android:layout_alignTop="@+id/card_img"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/card_img"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_rare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>